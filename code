n = int(input("How large you want to your diamond  be:"))
print("Your diamond will be: ")
for r1 in range(1, (n+1)//2 + 1):
    for r2 in range((n+1)//2 - r1):
        print(" ", end = "")
    for r3 in range((r1*2)-1):
        print("*", end = "")
    print()

for r1 in range((n+1)//2 + 1, n + 1):
    for r2 in range(r1 - (n+1)//2):
        print(" ", end = "")
    for r3 in range((n+1 - r1)*2 - 1):
        print("*", end = "")
    print()
    
